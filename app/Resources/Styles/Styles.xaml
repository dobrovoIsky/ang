<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">#3A77D7</Color>
    <Color x:Key="PrimaryDarkText">#222222</Color>
    <Color x:Key="PrimaryLightText">#FAFAFA</Color>
    <Color x:Key="SecondaryText">#8A8A8A</Color>
    <Color x:Key="PageBackground">#F7F8FC</Color>
    <Color x:Key="FrameBackground">White</Color>
    <Color x:Key="BorderColor">#E0E0E0</Color>

    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource PageBackground}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource PrimaryDarkText}"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PrimaryDarkText}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="14,10" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="TextColor" Value="{StaticResource PrimaryDarkText}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource SecondaryText}"/>
        <Setter Property="HeightRequest" Value="48"/>
    </Style>

    <Style TargetType="Picker">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="TextColor" Value="{StaticResource PrimaryDarkText}"/>
        <Setter Property="TitleColor" Value="{StaticResource SecondaryText}"/>
        <Setter Property="HeightRequest" Value="48"/>
    </Style>

    <Style TargetType="Frame">
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="BackgroundColor" Value="{StaticResource FrameBackground}"/>
    </Style>

</ResourceDictionary>